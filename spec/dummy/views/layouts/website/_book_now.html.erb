<% 
  unless @book_now_section
    @book_now_section = Dhatu::Section.new(title: "Book Now", short_description: "Please Configure BOOK_NOW Section")
  end
%>
<div class="book-now-form-bg c-content-box c-size-md book-now-box" id="BookNow">
  <div class="c-content-tile-grid c-bs-grid-reset-space" data-auto-height="true">
    <div class="c-content-title-1">
      <h3 class="c-font-uppercase c-center c-font-bold"><%= @book_now_section.title %></h3>
      <div class="c-line-center"></div>
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <p class="c-center" style="margin-bottom: 50px;padding: 0px 75px;">
              <%= raw @book_now_section.short_description %>
            </p>
          </div>
        </div>
        <% @booking = Dhatu::Booking.new %>
        <%= form_for(@booking,
          :url => create_booking_path, :method => :post, 
          :remote => true, :html => {:id=>"form_booking"}) do |f| %>
        <div class="row">
          <div class="col-sm-10 col-md-offset-1">

            <div class="row">
              <div class="col-md-12" id="booking_form_error">
                <%= @booking.errors[:base].to_sentence %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="c-contact">
                <div class="row form-group">
                    <div class="col-md-6">
                     <input type="text" placeholder="Your Name" id="book_now_name" class="form-control c-square c-theme input-lg" name="dhatu/booking[name]">
                    <span class="icon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                    </div>
                    <div class="col-md-6">
                      <div class="drop">
                        <select id="service_option" class="form-control minimal" name="dhatu/booking[service_id]">
                          <option> Select Service </option>
                          <% Dhatu::Service.published.all.each do |s| %>
                          <option value="<%= s.id %>"> <%= s.name %> </option>
                          <% end %>
                        </select>
                         <span class="icon4"><i class="fa fa-list-alt" aria-hidden="true"></i></span>
                      </div>
                    </div>
                  </div>

                  <div class="row form-group">

                    <div class="col-md-3">
                      <input type="text" placeholder="Your Email" id="book_now_email" class="form-control c-square c-theme input-lg" name="dhatu/booking[email]">
                      <span class="icon3"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                    </div>

                    <div class="col-md-3">
                      <input type="text" placeholder="Mobile Number" id="book_now_mobile_number" class="form-control c-square c-theme input-lg" name="dhatu/booking[mobile]">
                      <span class="icon2"><i class="fa fa-phone" aria-hidden="true"></i></span>
                    </div>

                    <div class="col-md-3">
                      <input type="date" placeholder="Date" id="book_now_date" class="form-control c-square c-theme input-lg" name="dhatu/booking[date]">
                      <span class="icon5"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                    </div>

                    <div class="col-md-3 drop">
                     <select class="form-control minimal" id="book_now_time">
                      <option> Select Time</option>
                      <option> 09.30 AM </option>
                      <option> 10.00 AM </option>
                      <option> 10.30 AM </option>
                      <option> 11.00 AM </option>
                      <option> 11.30 AM </option>
                      <option> 12.00 PM </option>
                      <option> 12.30 PM </option>
                      <option> 01.00 PM </option>
                      <option> 01.30 PM </option>
                      <option> 02.00 PM </option>
                      <option> 02.30 PM </option>
                      <option> 03.00 PM </option>
                      <option> 03.30 PM </option>
                      <option> 04.00 PM </option>
                      <option> 04.30 PM </option>
                      <option> 05.00 PM </option>
                      <option> 05.30 PM </option>
                      <option> 06.00 PM </option>
                      <option> 06.30 PM </option>
                      <option> 07.00 PM </option>
                      <option> 07.30 PM </option>
                      <option> 08.00 PM </option>
                      <option> 08.30 PM </option>
                      <option> 09.00 PM </option>
                      <option> 09.30 PM </option>
                      </select>
                      <span class="icon6"><i class="fa fa-clock-o" aria-hidden="true"></i></span>
                    </div>

                  </div>
                  <div class="row form-group" >
                    <div class="col-md-12">
                      <textarea rows="8" name="dhatu/booking[message]" id="book_now_message" placeholder="Type your message here..." class="form-control c-theme c-square input-lg"></textarea>
                      <span class="icon4a"><i class="fa fa-comments" aria-hidden="true"></i></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row c-center">
              <button type="submit" id="book_now_btn" class="btn book-now-btn ">Book Now</button> 
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>