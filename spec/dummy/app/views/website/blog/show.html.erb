<div class="c-content-box c-size-md">
  <div class="container">

    <div class="row">
      <div class="col-md-9">
        <div class="c-content-blog-post-1-view">
          <div class="c-content-blog-post-1">
            
            <div class="c-title c-font-bold">
              <a href="javascript:;" style="text-transform: capitalize;"><%= @blog_post.title %></a>
            </div>

            <div class="c-panel c-margin-b-30">
              
              <% if @blog_post.posted_at %>
              <div class="c-date date-part">Posted on <span class="c-font-uppercase"><%= @blog_post.posted_at.strftime("%d %b %Y") %></span></div>
              <ul class="c-tags c-theme-ul-bg">
                <li><%= @blog_post.try(:category).try(:name) %></li>
              </ul>
              <% end %>
            </div>

            <div style="margin-bottom:30px;">
              <%= display_image(@blog_post, 'cover_image.image.large.url', class: "img-responsive") %>
            </div>

            <div class="c-desc">
              <%= raw @blog_post.description %>
            </div>

            <div class="">
              <img alt="" src="/assets/likeBtn.jpg" class="img-responsive inner-page-like right-align">
            </div>
            
          </div>
        </div>

        <div class="c-content-blog-post-1-view">
          <a class="twitter-share-button"
              href="https://twitter.com/intent/tweet">Tweet 2</a>
        </div>

        <div class="c-content-blog-post-1-view">
          <%= render partial: "layouts/common/disqus" %>
        </div>

      </div>
      <div class="col-md-3">
        <!-- BEGIN: CONTENT/BLOG/BLOG-SIDEBAR-1 -->
        
        <div class="c-content-ver-nav">
          <div class="c-content-title-1 c-theme c-title-md">
            <h3 class="c-font-bold c-font-uppercase">Trending Topics</h3>
            <div class="c-line-left c-theme-bg"></div>
          </div>
          <ul class="c-menu c-arrow-dot1 c-theme">
            <% @categories.each do |c| %>
            <li><%= link_to c.name, blog_search_path(category_id: c.id), class:"#{@blog_post.category == c ? 'active' : ''}" %></li>
            <% end %>
          </ul>
        </div>

        <div class="c-content-tab-1 c-theme c-margin-t-30">
          <div class="nav-justified">
            
            <div class="c-content-title-1 c-theme c-title-md">
                <h3 class="c-font-bold c-font-uppercase">Recent Posts</h3>
                <div class="c-line-left c-theme-bg"></div>
            </div>
            <div class="tab-content">
                <div class="tab-pane active" id="blog_recent_posts">
                  <ul class="c-content-recent-posts-1">
                    <% @recent_posts.each do |bp| %>
                    <li>
                      <div class="c-image">
                        <%= display_image(bp, 'cover_image.image.small.url', class: "img-responsive") %>
                      </div>
                      <div class="c-post">
                        <a href="<%= blog_path(slug: bp.slug) %>" class="c-title">
                        <%= bp.title.truncate(60) %>
                        </a>
                        <!-- <div class="c-date"><%#= raw bp.description.truncate(60) %></div> -->
                      </div>
                    </li>
                    <% end %>
                  </ul>
                </div>
                
              </div>
            </div>
        </div>

        <!-- END: CONTENT/BLOG/BLOG-SIDEBAR-1 -->
      </div>
    </div>
              
  </div>
</div>

<script>window.twttr = (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0],
    t = window.twttr || {};
  if (d.getElementById(id)) return t;
  js = d.createElement(s);
  js.id = id;
  js.src = "https://platform.twitter.com/widgets.js";
  fjs.parentNode.insertBefore(js, fjs);

  t._e = [];
  t.ready = function(f) {
    t._e.push(f);
  };

  return t;
