<!-- Show Banner -->
<%= render partial: "layouts/common/banner" %>

<div class="container" style="margin-top:80px;">

  <% if @about_us %>
  <% image_url = @about_us.try(:cover_image).try(:image).try(:medium) %>
  <div class="row">
    <div class="col-md-6">
      <h1><%= @about_us.title %></h1>
      <p><%= raw @about_us.long_description %></p>
    </div>
    <div class="col-md-6">
      <% if image_url %>
        <img alt="<%= @about_us.title %>" src="<%= image_url %>">
      <% else %>
      <img data-src="holder.js/500x500/auto" alt="<%= @about_us.title %>" style="width: 500px; height: 500px;">
      <% end %>
    </div>
  </div>
  <% end %>

</div>