<article>
  <div class="row offer">

    <div class="col-md-8">
      <div class="row">
        <div class="col-sm-8 col-xs-12">
          <h3><%= offer.title %></h3>
        </div>
        <div class="col-sm-4 col-xs-12">
          <span class="cost-button"><%= offer.offer_text %></span>
        </div>
      </div>
      <div class="offer-content row">
        <p><%= raw offer.description %></p>
        <!-- <div class="Duration">Duration : <span>1 Hrs</span></div> -->
        <!-- <a href="javascript:;" class="read-more">[ Read More ]</a> -->
      </div>
    </div>
    <div class="col-md-4">
      <%= display_image(offer, 'cover_image.image.small.url', class: "img-responsive") %>
      </div>
    
  </div>
</article>